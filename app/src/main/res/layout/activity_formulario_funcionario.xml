<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.FormularioFuncionarioActivity">

    <EditText
        android:id="@+id/formulario_funcionario_nome"
        android:inputType="textPersonName"
        android:maxLength="255"
        android:layout_width="383dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:gravity="top"
        android:background="@android:color/transparent"
        android:hint="Nome"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View android:id="@+id/lista_funcionarios_fundo_gradiente_inferior"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@drawable/fundo_gradiente_insere_funcionario"
        app:layout_constraintBottom_toTopOf="@id/formulario_funcionario_nome"
        app:layout_constraintEnd_toEndOf="@id/formulario_funcionario_nome"
        app:layout_constraintStart_toStartOf="@id/formulario_funcionario_nome"/>

    <EditText
        android:id="@+id/formulario_funcionario_idade"
        android:inputType="number"
        android:digits="0123456789"
        android:layout_width="383dp"
        android:layout_height="50dp"
        android:layout_margin="0dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="Idade"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/formulario_funcionario_setor"
        app:layout_constraintTop_toBottomOf="@id/formulario_funcionario_setor" />

    <View android:id="@+id/lista_funcionarios_fundo_gradiente_inferior"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@drawable/fundo_gradiente_insere_funcionario"
        app:layout_constraintBottom_toTopOf="@id/formulario_funcionario_idade"
        app:layout_constraintEnd_toEndOf="@id/formulario_funcionario_idade"
        app:layout_constraintStart_toStartOf="@id/formulario_funcionario_idade"
        tools:ignore="DuplicateIds" />

    <EditText
        android:id="@+id/formulario_funcionario_setor"
        android:layout_width="383dp"
        android:maxLength="255"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="Setor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/formulario_funcionario_nome"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/formulario_funcionario_nome"
        app:layout_constraintTop_toBottomOf="@+id/formulario_funcionario_nome"
        app:layout_constraintVertical_bias="0.0" />



    <View android:id="@+id/lista_funcionarios_fundo_gradiente_inferior"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@drawable/fundo_gradiente_insere_funcionario"
        app:layout_constraintBottom_toTopOf="@id/formulario_funcionario_setor"
        app:layout_constraintEnd_toEndOf="@id/formulario_funcionario_setor"
        app:layout_constraintStart_toStartOf="@id/formulario_funcionario_setor"
        tools:ignore="DuplicateIds" />

    <View
    android:id="@+id/lista_funcionarios_fundo_gradiente_inferior"
    android:layout_width="0dp"
    android:layout_height="5dp"
    android:background="@drawable/fundo_gradiente_insere_funcionario"
    app:layout_constraintStart_toStartOf="@id/formulario_funcionario_idade"
    app:layout_constraintEnd_toEndOf="@id/formulario_funcionario_idade"
    app:layout_constraintTop_toBottomOf="@id/formulario_funcionario_idade"
    tools:ignore="DuplicateIds" />
</androidx.constraintlayout.widget.ConstraintLayout>