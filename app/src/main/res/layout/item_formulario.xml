<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_funcionario_nome"
            android:layout_width="131dp"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:maxLines="2"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nome" />

        <TextView
            android:id="@+id/item_funcionario_setor"
            android:layout_width="152dp"
            android:layout_height="32dp"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/item_funcionario_nome"
            app:layout_constraintTop_toBottomOf="@id/item_funcionario_nome"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Setor" />

        <TextView
            android:id="@+id/item_funcionario_email"
            android:layout_width="208dp"
            android:layout_height="35dp"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/item_funcionario_setor"
            app:layout_constraintTop_toBottomOf="@id/item_funcionario_setor"
            tools:text="Email" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>